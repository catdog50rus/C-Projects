// Программа для поиска совершенных чисел
/* Совершенное число́ (др.-греч. ἀριθμὸς τέλειος) — натуральное число, равное сумме всех своих собственных делителей
(то есть всех положительных делителей, отличных от самого́ числа). */

public class MainClass
{
    public static void Main()
    {
        int j;//Проверяемое число
        int N = 5;// Переменная позволяющая циклу работать дальше
        int sum = 0; //Переменная для подсчета суммы делителей числа
        int cnt = 0; //Счетчик найденных чисел
        int n = 3;   //Количество чисел, которое необходимо найти
        for(j = 1; j<=N;j++){
            sum = 0;
            //цикл находящий целые делители числа j и суммирующий их, где i-Делитель
            for(int i = 1; i<j; i++){
                if (j % i == 0){
                    sum = sum + i;
                }
            }
            // проверяем является ли число j совершенным, если да, увеличиваем счетчик на ед. и выводим найденное число в консоль
            if(sum == j){
                cnt++;
                Console.Write(j+",");
            }
            // после нахождения заданного количества совершенных чисел, завершаем программу
            if(cnt == n){
                break;
            }
            N++;
       }
    }
}
